{%- style -%}
  .product-tabs {
    margin-top: 60px;
    border-top: 1px solid rgba(var(--color-text), 0.1);
    padding-top: 40px;
  }

  .product-tabs__nav {
    display: flex;
    border-bottom: 2px solid rgba(var(--color-text), 0.1);
    margin-bottom: 30px;
    overflow-x: auto;
    -webkit-overflow-scrolling: touch;
  }

  .product-tabs__nav-item {
    padding: 15px 25px;
    background: none;
    border: none;
    font-family: var(--font-heading-family);
    font-size: 1rem;
    font-weight: 600;
    color: var(--color-text-light);
    cursor: pointer;
    transition: all 0.3s ease;
    border-bottom: 3px solid transparent;
    white-space: nowrap;
    flex-shrink: 0;
  }

  .product-tabs__nav-item:hover,
  .product-tabs__nav-item.active {
    color: var(--color-primary);
    border-bottom-color: var(--color-primary);
  }

  @media screen and (max-width: 749px) {
    .product-tabs__nav-item {
      padding: 12px 20px;
      font-size: 0.9rem;
    }
  }

  .product-tabs__content {
    display: none;
    animation: fadeIn 0.3s ease;
  }

  .product-tabs__content.active {
    display: block;
  }

  @keyframes fadeIn {
    from { opacity: 0; transform: translateY(10px); }
    to { opacity: 1; transform: translateY(0); }
  }

  .product-tabs__section {
    margin-bottom: 30px;
  }

  .product-tabs__section h3 {
    color: var(--color-primary);
    margin-bottom: 15px;
    font-size: 1.25rem;
  }

  .product-tabs__section h4 {
    color: var(--color-text);
    margin-bottom: 10px;
    font-size: 1.1rem;
  }

  .product-tabs__section p {
    line-height: 1.6;
    margin-bottom: 15px;
  }

  .product-tabs__section ul {
    padding-left: 20px;
    margin-bottom: 20px;
  }

  .product-tabs__section li {
    margin-bottom: 8px;
    line-height: 1.5;
  }

  .ingredients-list {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 20px;
    margin-top: 20px;
  }

  .ingredient-item {
    background: rgba(var(--color-primary), 0.05);
    padding: 20px;
    border-radius: 8px;
    border-left: 4px solid var(--color-primary);
  }

  .ingredient-item h4 {
    color: var(--color-primary);
    margin-bottom: 8px;
  }

  .ingredient-item p {
    font-size: 0.9rem;
    margin-bottom: 0;
  }

  .how-to-steps {
    counter-reset: step-counter;
  }

  .how-to-step {
    counter-increment: step-counter;
    position: relative;
    padding-left: 60px;
    margin-bottom: 25px;
  }

  .how-to-step::before {
    content: counter(step-counter);
    position: absolute;
    left: 0;
    top: 0;
    width: 40px;
    height: 40px;
    background: var(--color-primary);
    color: white;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: 600;
    font-size: 1.1rem;
  }

  .how-to-step h4 {
    margin-bottom: 8px;
    color: var(--color-text);
  }

  .how-to-step p {
    margin-bottom: 0;
    color: var(--color-text-light);
  }

  @media screen and (max-width: 749px) {
    .ingredients-list {
      grid-template-columns: 1fr;
    }
    
    .how-to-step {
      padding-left: 50px;
    }
    
    .how-to-step::before {
      width: 35px;
      height: 35px;
      font-size: 1rem;
    }
  }
{%- endstyle -%}

